import numpy as np
import matplotlib.pyplot as plt

# Generating a sine wave
t = np.linspace(0, 10 * np.pi, 100)  # choosing 100 points from 0 to 10Ï€
sine_wave = np.sin(t)

# Plotting the sine wave
plt.figure(figsize=(8, 4))
plt.plot(t, sine_wave, label="Sine Wave", color='b')
plt.xlabel("Time")
plt.ylabel("Amplitude")
plt.title("Step 1: Original Sine Wave")
plt.legend()
plt.grid()
plt.show()
